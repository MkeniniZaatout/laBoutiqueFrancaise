{% extends 'base.html.twig' %}

{% block title %}Nos produits - La Boutique Française{% endblock %}

{% block content %}

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <h3>Filter :</h3>
            colonne de filtre
        </div>
        {% for product in products %}
        <div class="col-12 col-sm-8 col-md-6 col-lg-4 mt-2">
            <div class="card card-edit">
                <img class="card-img" src="{{ asset('uploads/') }}{{product.illustration}}" alt="{{product.name}}">
                <div class="card-body">
                    {% if product.stars == 1 %}
                    <h6>Avis : ⭐</h6>
                    {% elseif product.stars == 2 %}
                    <h6>Avis : ⭐⭐</h6>
                    {% elseif product.stars == 3 %}
                    <h6>Avis : ⭐⭐⭐</h6>
                    {% elseif product.stars == 4 %}
                    <h6>Avis : ⭐⭐⭐⭐</h6>                    
                    {% elseif product.stars == 5 %}
                    <h6>Avis : ⭐⭐⭐⭐⭐</h6>
                    {% else %}
                    <h6>Avis : Aucun avis</h6>
                    {% endif %}
                <h4 class="card-title">{{product.subtitle}}</h4>
                <p class="card-text">
                    {{product.description}}</p>
                <h6 class="card-subtitle mb-2 text-muted">Couleur : <span>{{product.color}}</span></h6>
                
                <div class="buy d-flex justify-content-between align-items-center">
                    <div class="price text-success"><h5 class="mt-2">{{ (product.price / 100)|number_format(2, ',', '.') }} €</h5></div>
                </div>
                    <a href="{{ path('product', {id: product.id}) }}" class="btn btn-outline-primary mt-3"><i class="fa fa-shopping-cart"></i> Voir le produit</a>

                </div>
            </div>
        </div>
        {% endfor %}
    </div>
</div>


{% endblock %}
