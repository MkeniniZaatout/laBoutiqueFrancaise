{% extends 'base.html.twig' %}

{% block title %}Nos produits - La Boutique Française{% endblock %}

{% block content %}
    <h1>Nos produits :</h1>

<div class="container">
    <div class="row">
        {% for product in products %}
        <div class="col-12 col-sm-8 col-md-6 col-lg-4">
            <div class="card card-edit">
                <img class="card-img" src="{{ asset('uploads/') }}{{product.illustration}}" alt="{{product.name}}">
                <div class="card-img-overlay d-flex justify-content-end">
                <a href="#" class="card-link text-danger like">
                    <i class="fas fa-heart"></i>
                </a>
                </div>
                <div class="card-body">
                <h4 class="card-title">{{product.subtitle}}</h4>
                <h6 class="card-subtitle mb-2 text-muted">Couleur: {{product.color}}</h6>
                <p class="card-text">
                    {{product.description}}</p>
                <div class="buy d-flex justify-content-between align-items-center">
                    <div class="price text-success"><h5 class="mt-4">{{product.price}} €</h5></div>
                </div>
                    <a href="#" class="btn btn-block btn-lg btn-danger mt-3"><i class="fa fa-shopping-cart"></i> Voir le produit</a>

                </div>
            </div>
        </div>
        {% endfor %}
    </div>
</div>


{% endblock %}
