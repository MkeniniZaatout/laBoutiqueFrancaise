{% extends 'base.html.twig' %}

{% block title %}Mes addresses - La Boutique FranÃ§aise{% endblock %}

{% block content %}
<div class='container'>
        <a href="{{ path("compte_address_add") }}" class='btn btn-outline-info btn-sm float-right'>AJOUTER UNE ADRESSE</a>
        <h1>Mes adresses : </h1>
        <hr>
        <h4>Vos addresses actuel : </h4>
        <div class='mt-2 row m-3'>
        {% set adresses = app.user.userAddress %}
        {% if adresses|length > 0 %}
                {% for addresse in adresses %}
                <div class="mb-3 col-md-3 card mr-1 text-center">
                        <h3>{{addresse.name}}</h3>
                        <p>{{addresse.firstname}} {{addresse.lastname}}</br> 
                        {{addresse.address}} </br> 
                        {{addresse.postal}} {{addresse.City}} {{addresse.country}}</p>
                        <a href="{{ path("compte_address_remove", {id : addresse.id}) }}" class='btn btn-danger float-right mb-1'>Supprimer</a>
                        <a href="{{ path("compte_address_edit", {id : addresse.id}) }}" class='btn btn-secondary float-right'>Modifier</a>
                </div>
                {% endfor %}
        {% else %}
                <p> Vous n'avez pour l'instant aucune adresse, ajoutez une adresse <a href='{{ path("compte_address_add") }}'>ici</a>. </p>
        {% endif %}
        </div>

        <a class='mt-4' href="">Retour</a>

</div>
{% endblock %}
